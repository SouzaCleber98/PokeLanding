<!-- Modal de Login -->
<div id="modal-login" class="modal">

  <div class="modal-content">
    <span class="close" id="fecharModal">&times;</span>

    <h2>Login</h2>

    <form>
      <input type="email" placeholder="Email" required />
      <input type="password" placeholder="Senha" required />
      <small id="login-msg" class="mensagem"></small>
      <button type="submit">Entrar</button>
    </form>

  </div>

</div>

<!-- Fim do Modal de Login -->
<!-- Modal de Cadastro -->
<div id="modal-cadastro" class="modal">
  <div class="modal-content">
    <span class="close" id="fecharModal">&times;</span>
    <h2>Cadastro</h2>
    <form>
      <input type="text" placeholder="Nome completo" required />
      <input type="email" placeholder="Email" required />
      <small id="email-msg" class="mensagem"></small>
      <input type="password" placeholder="Senha" required />
      <input type="text" class="cpf" maxlength="14" placeholder="CPF" required />
      <small id="cpf-msg" class="mensagem"></small>
      <button type="submit">Cadastrar</button>
    </form>
  </div>
</div>
<!-- Fim do Modal de Cadastro -->
<!-- Fim do Modal -->

